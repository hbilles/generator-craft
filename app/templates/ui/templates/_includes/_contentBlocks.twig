{% if entry.contentBlocks|length %}
<section class="contentBlocks {{ class|default('') }}">
{% for block in entry.contentBlocks %}

	{% switch block.type %}

		{% case 'text' %}

			<div class="contentBlock-text">
				{{ block.text | pd }}
			</div>

		{% case 'heading' %}

			<h2>{{ block.heading }}</h2>

		{% case 'blockquote' %}

			<blockquote class="contentBlock-blockquote">
				{{ block.quote | pd }}

				{% if block.source %}
				<p class="source">
					{{ block.source }}
				</p>
				{% endif %}
			</blockquote>

		{% case 'pullquote' %}

			<blockquote class="contentBlock-pullquote">
				{{ block.pullquote | pd }}
			</blockquote>

		{% case 'image' %}

			{% for asset in block.image %}
				<figure class="contentBlock-image">
					<img src="{{ asset.getUrl('large') }}" alt="">
					
					{% if asset.caption %}
						<figcaption class="caption">
							{{ asset.caption | pd }}
						</figcaption>
					{% endif %}
				</figure>
			{% endfor %}

		{% case 'video' %}

			{% set video = craft.embedder.url(block.video) %}

			<figure class="contentBlock-video">
				{{ video.embed_code }}
				
				{% if block.caption %}
					<figcaption class="caption">
						{{ block.caption | pd }}
					</figcaption>
				{% endif %}
			</figure>

	{% endswitch %}

{% endfor %}
</section>
{% endif %}